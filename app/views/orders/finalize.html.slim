h1 = "Completar comanda"

= render "price_and_bonus", :order => @order

table.table
  thead
    th
    th
    th = "Preu"
    th = "Bonus"
  - @order.order_products.each do |order_product|
    - product = order_product.product
    tr
      td.span3
        .center = link_to image_tag(product.product_index_image_url(:small)), product
      td.span2 = product.name
      td.span2
        =' product.price
        | â‚¬
      td.span2 = number_with_delimiter(product.bonus_points)
      td.span1 = order_product.quantity

.pay-button
  = payment_service_for @order.ref, APP_CONFIG["paypal"]["account"], :amount => @order.price, :currency => "EUR", :service => :paypal do |service|
    - service.customer :first_name => @order.shipping_name, :email => @order.user.email,
      :last_name => @order.shipping_last_name
    - service.shipping 0
    - service.tax '0'
    - service.notify_url paypal_ipn_payments_url
    - service.return_url thanks_order_url(@order)
    - service.cancel_return_url finalize_order_url
    - service.item_name "Fanfare"
    input id="lc" name="lc" type="hidden" value=I18n.locale.to_s.upcase
    input id="address1" name="address1" type="hidden" value=@order.shipping_address
    input id="zip" name="zip" type="hidden" value=@order.shipping_zip
    input id="city" name="city" type="hidden" value=@order.shipping_town
    input id="country" name="country" type="hidden" value=I18n.t("countries.#{@order.shipping_country}")
    input id="state" name="state" type="hidden" value=@order.shipping_province.camelize
    input id="phone" name="night_phone_b" type="hidden" value=@order.shipping_phone

    = submit_tag "Pagar", :id => 'button_credit_card', :class => "strong-button"
